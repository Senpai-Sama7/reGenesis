{
  "$schema": "https://design-tokens.github.io/format/spec.json",
  "$description": "CyberArchitect Design Tokens - W3C DTCG format",
  "color": {
    "neutral": {
      "50": {
        "$type": "color",
        "$value": "#f8fafc"
      },
      "900": {
        "$type": "color",
        "$value": "#0f172a"
      }
    },
    "primary": {
      "500": {
        "$type": "color",
        "$value": "#3b82f6"
      },
      "700": {
        "$type": "color",
        "$value": "#1d4ed8"
      }
    }
  },
  "brand": {
    "bg": {
      "$type": "color",
      "$value": "#0b1020"
    },
    "fg": {
      "$type": "color",
      "$value": "#e7ebf3"
    },
    "accent": {
      "$type": "color",
      "$value": "#4da3ff"
    },
    "muted": {
      "$type": "color",
      "$value": "#141a2e"
    }
  },
  "typography": {
    "font-family": {
      "sans": {
        "$type": "fontFamily",
        "$value": [
          "Inter",
          "-apple-system",
          "system-ui",
          "sans-serif"
        ]
      },
      "mono": {
        "$type": "fontFamily",
        "$value": [
          "JetBrains Mono",
          "Consolas",
          "monospace"
        ]
      }
    },
    "font-size": {
      "base": {
        "$type": "dimension",
        "$value": "16px"
      },
      "xl": {
        "$type": "dimension",
        "$value": "20px"
      },
      "3xl": {
        "$type": "dimension",
        "$value": "30px"
      }
    },
    "line-height": {
      "normal": {
        "$type": "number",
        "$value": 1.5
      }
    }
  },
  "space": {
    "2": {
      "$type": "dimension",
      "$value": "8px"
    },
    "4": {
      "$type": "dimension",
      "$value": "16px"
    },
    "8": {
      "$type": "dimension",
      "$value": "32px"
    }
  },
  "radius": {
    "base": {
      "$type": "dimension",
      "$value": "8px"
    }
  },
  "shadow": {
    "md": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "4px",
        "blur": "6px",
        "color": "rgba(0,0,0,0.1)"
      }
    }
  }
}